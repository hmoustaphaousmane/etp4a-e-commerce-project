<%= form_with(model: item) do |form| %>
  <% if item.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">

  <div class="col-5">
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, :class => "form-control" %>
  </div>

  <div class="col-2">
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price, :class => "form-control" %>
  </div>

  <div class="col-5">
    <%= form.label :image_url, style: "display: block" %>
    <%= form.text_field :image_url, :class => "form-control" %>
  </div>

  </div>
  
  <div class="row">

  <div class="col">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, :class => "form-control" %>
  </div>

  </div>

  <div class="col-12 justify-content-end d-flex mt-2">
    <%= form.submit :class => "btn btn-primary sm mx-2" %>
    <%= link_to "Cancel & Back to items", items_path, :class => "btn btn-primary sm" %>
  </div>

<% end %>