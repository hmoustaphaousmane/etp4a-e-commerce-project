<div id="<%= dom_id item %>">

<div class="row">
  <div class="col-sm-2"></div>

    <div class="shadow p-4 mb-5 bg-body rounded col-md-8">
    <center>
    <h3>
        Details On Item <%= item.id %> ...
    </h3>
    <table class="table table-bordered table-striped table-hover">
    <tbody>            
        <tr class="success"> 
            <td><strong>ID : </strong><%= item.id %></td>
        </tr>
        <tr class="success"> 
            <td><strong>Title : </strong><%= item.title %> <br/>
        </tr>
        <tr class="success"> 
            <td><strong>Description : </strong><%= item.description %></td>
        </tr>
        <tr class="success"> 
            <td><strong>Price : </strong><%= item.price %></td>
        </tr>
        <tr class="success"> 
            <td><strong>Image : </strong><%= item.image_url %></td>
        </tr>
    </tbody>
    </table>
    </center>

    <% if current_page?(item) %>
    <div class="col-12 d-flex justify-content-end mb-2">
      <%# <%= link_to "Edit this item", edit_item_path(item), :class =>"btn btn-warning sm mx-2" %>
      <%= link_to "Back to items", items_path, :class =>"btn btn-primary sm mx-2" %>
      <%# <%= button_to "Destroy this item", item, method: :delete, :class =>"btn btn-danger sm mx-2", :onclick => "return confirm('Are you sure to delete this item ?')" %> 
    </div>
    <% end %>

  </div> 
</div> 

</div>